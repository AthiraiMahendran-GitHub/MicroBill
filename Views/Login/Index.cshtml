@{
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/custom/login.js" asp-append-version="true"></script>


<div class="position-relative">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-6 mx-4">

            <!-- Login -->
            <div class="card p-7">
                <!-- Logo -->
                <div class="app-brand justify-content-center mt-5">
                    <a href="/" class="app-brand-link gap-3">
                        <img src="~/img/illustrations/microoBill.png" alt="auth-tree" class="app-brand-logo demo">
                    </a>
                </div>
                <!-- /Logo -->

                <div id="divLoginSection" class="card-body mt-1">
                    <form id="loginForm" class="mb-5" action="~/" method="GET">
                        <div class="form-floating form-floating-outline mb-5">
                            <input type="text" class="form-control" id="lemail" name="lemail" placeholder="Enter your email or username" autocomplete="off" required>
                            <label for="email">Email or Username</label>
                                <div class="invalid-feedback">Please enter your email or username.</div>
                        </div>
                        <div class="mb-5">
                            <div class="form-password-toggle">
                                <div class="input-group input-group-merge">
                                    <div class="form-floating form-floating-outline">
                                        <input type="password" id="lpassword" class="form-control" required name="lpassword" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                                        <label for="lpassword">Password</label>
                                        <div class="invalid-feedback">Please enter your password.</div>
                                    </div>
                                    <span class="input-group-text cursor-pointer"><i class="ri-eye-off-line ri-20px"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-5 pb-2 d-flex justify-content-between pt-2 align-items-center">
                            <div class="form-check mb-0">
                                <input class="form-check-input" type="checkbox" id="remember-me">
                                <label class="form-check-label" for="remember-me">
                                    Remember Me
                                </label>
                            </div>
                            <a href="/Auth/ForgotPasswordBasic" class="float-end mb-1">
                                <span>Forgot Password?</span>
                            </a>
                        </div>
                        <div class="mb-5">
                            <button class="btn btn-primary d-grid w-100" type="submit">login</button>
                        </div>
                    </form>

                    <p class="text-center mb-5">
                        <span>New on our platform?</span>
                        <a href="javascript:void(0);" id="showRegister">
                            <span>Create an account</span>
                        </a>
                    </p>
                </div>

                <div id="divRegisterSection" class="card-body mt-1" style="display: none;">
                    <h4 class="mb-1">Adventure starts here 🚀</h4>
                    <p class="mb-5">Make your Customer management easy and fun!</p>

                    <form id="registerForm" class="mb-5" action="~/" method="GET">
                        <div class="form-floating form-floating-outline mb-5">
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username" required>
                            <label for="username">Username</label>
                            <div class="invalid-feedback">Please enter your username.</div>
                        </div>
                        <div class="form-floating form-floating-outline mb-5">
                            <input type="email" class="form-control" id="remail" name="remail" placeholder="Enter your email" required>
                            <label for="email">Email</label>
                            <div class="invalid-feedback">Please enter your email</div>
                        </div>
                        <div class="mb-5 form-password-toggle">
                            <div class="input-group input-group-merge">
                                <div class="form-floating form-floating-outline">
                                    <input type="password" id="rpassword" class="form-control" required name="rpassword" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                                    <label for="password">Password</label>
                                    <div class="invalid-feedback">Please enter your password.</div>
                                </div>
                                <span class="input-group-text cursor-pointer"><i class="ri-eye-off-line ri-20px"></i></span>
                            </div>
                        </div>
 
                        <button class="btn btn-primary d-grid w-100 mb-5">
                            Sign up
                        </button>
                    </form>

                    <p class="text-center mb-5">
                        <span>Already have an account?</span>
                        <a href="javascript:void(0);" id="showLogin">
                            <span>Sign in instead</span>
                        </a>
                    </p>
                </div>

                <div id="divForgetPassword" class="card-body mt-1" style="display: none;">
                    <h4 class="mb-1">Forgot Password? 🔒</h4>
                    <p class="mb-5">Enter your email and we'll send you instructions to reset your password</p>
                    <form id="formAuthentication" class="mb-5" action="~/" method="GET">
                        <div class="form-floating form-floating-outline mb-5">
                            <input type="text" class="form-control" id="email" name="email" placeholder="Enter your email" autofocus>
                            <label>Email</label>
                        </div>
                        <button class="btn btn-primary d-grid w-100 mb-5">Send Reset Link</button>
                    </form>
                    <div class="text-center">
                        <a href="~/Auth/LoginBasic" class="d-flex align-items-center justify-content-center">
                            <i class="ri-arrow-left-s-line scaleX-n1-rtl ri-20px me-1_5"></i>
                            Back to login
                        </a>
                    </div>
                </div>
            </div>
            <!-- /Login -->
            @* "~/img/illustrations/tree-3.png" *@
           @*  ~/img/illustrations/auth-basic-mask-light.png
            ~/img/illustrations/tree.png *@
            <img src="~/img/illustrations/tree-3.png" alt="auth-tree" class="authentication-image-object-left d-none d-lg-block">
            <img src="~/img/illustrations/auth-basic-mask-light.png" class="authentication-image d-none d-lg-block" height="172" alt="triangle-bg" data-app-light-img="@* illustrations/auth-basic-mask-light.png *@" data-app-dark-img="@* illustrations/auth-basic-mask-dark.png *@">
            <img src="~/img/illustrations/tree.png" alt="auth-tree" class="authentication-image-object-right d-none d-lg-block">
        </div>
    </div>
</div>


